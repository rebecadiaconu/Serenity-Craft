@model Serenity_Craft.Models.Contact
<br />
<br />

<div style="padding-top: 30px; position: absolute; left: 150px;">
    <img src="/Content/images/back.png" />
    @Html.ActionLink("Back to contacts list", "Index", "Contact")
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger ">@ViewBag.Message</div>
}

<h2>@ViewBag.Name</h2>
<br />
<br />

@using (Html.BeginForm("Edit", "Contact"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(b => b.PublisherId)

    @Html.Label("PhoneNumber", "Phone number:")
    <br />
    @Html.EditorFor(b => b.PhoneNumber, new { placeholder = "Type in the publisher's phone number", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.PhoneNumber, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Email", "Email:")
    <br />
    @Html.EditorFor(b => b.Email, new { placeholder = "Type in the publisher's email", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Email, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary col-lg-1" type="submit" style="margin-left: 45px">Update</button>

    <div style="position: absolute; bottom: -300px; right: 330px;">
        <img src="~/Content/images/finger-print.png" style="height: 300px; " />
        <p class="lead" style="position: relative; left: 200px; font-weight: bold;">Keep in touch!</p>
    </div>
}
