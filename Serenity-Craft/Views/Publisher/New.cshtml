@model Serenity_Craft.Models.PublisherContactInfo
@{
    ViewBag.Title = "New publisher";
}

<br />
<br />

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger ">@ViewBag.Message</div>
}

@if (ViewBag.BackToContacts != null)
{
    <div style="padding-top: 30px; position: absolute; left: 150px; top: 150px">
        <img src="/Content/images/back.png" />
        @Html.ActionLink("Back to contacts list", "Index", "Contact")
    </div> 
}

<div style="padding-top: 30px; position: absolute; left: 150px;">
    <img src="/Content/images/back.png" />
    @Html.ActionLink("Back to publishers list", "Index", "Publisher")
</div>  

<br />
<h2>@ViewBag.Title</h2>
<br />
<br />

@using (Html.BeginForm("New", "Publisher", FormMethod.Post))
{
    @Html.Label("Name", "Name:")
    <br />
    @Html.TextBoxFor(p => p.Name, null, new { placeholder = "Type in the publisher's name", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
    <br />

    @Html.Label("PhoneNumber", "Phone number:")
    <br />
    @Html.TextBoxFor(p => p.PhoneNumber, null, new { placeholder = "Type in the publisher's name", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.PhoneNumber, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Email", "Email:")
    <br />
    @Html.TextBoxFor(p => p.Email, null, new { placeholder = "Type in the publisher's name", @class = "form-control" })
    @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
    <br />
    <br/>
    
    <button class="btn btn-primary col-lg-1" type="submit" style="margin-left: 90px">Add</button>

    <div style="position: absolute; bottom: -300px; right: 330px;">
        <img src="~/Content/images/finger-print.png" style="height: 300px; " />
        <p class="lead" style="position: relative; left: 200px; font-weight: bold;">Share your thoughts!</p>
    </div>
}

