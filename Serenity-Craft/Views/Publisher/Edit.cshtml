@model Serenity_Craft.Models.Publisher
@{
    ViewBag.Title = "Update";
}

<br />
<br />

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger ">@ViewBag.Message</div>
}

<div style="padding-top: 30px; position: absolute; left: 150px;">
    <img src="/Content/images/back.png" />
    @Html.ActionLink("Back to publishers list", "Index", "Publisher")
</div>


<br />
<h2>@ViewBag.Title <small>@Model.Name</small></h2>
<br />
<br />

@using (Html.BeginForm("Edit", "Publisher"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(p => p.PublisherId)
    @Html.HiddenFor(p => p.Contact.PublisherId)

    @Html.Label("Name", "Publisher name:")
    <br />
    @Html.EditorFor(b => b.Name, new { placeholder = "Type in the publisher's name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Contact.PhoneNumber", "Phone number:")
    <br />
    @Html.EditorFor(b => b.Contact.PhoneNumber, new { placeholder = "Type in the publisher's phone number", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Contact.PhoneNumber, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Contact.Email", "Email:")
    <br />
    @Html.EditorFor(b => b.Contact.Email, new { placeholder = "Type in the publisher's email", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Contact.Email, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary col-lg-1" type="submit" style="margin-left: 45px">Update</button>

    <div style="position: absolute; bottom: -300px; right: 330px;">
        <img src="~/Content/images/finger-print.png" style="height: 300px; " />
        <p class="lead" style="position: relative; left: 200px; font-weight: bold;">Share your thoughts!</p>
    </div>
}

